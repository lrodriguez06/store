<header>
    <!--Carousel-->
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
        <div class="carousel-indicators">
            <% cont = 0 %>
            <% @banners.each do |banner| %>
                <% cont += 1 %>
                <% if cont == 1 %>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= cont -1 %>" class="active" aria-current="true" aria-label="Slide <%= cont %>">"></button>
                <% else %>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= cont -1 %>" aria-label="Slide <%= cont %>"></button>
                <% end %>
                
            <% end %>
        </div>
        <div class="carousel-inner">
            <% cont = 0 %>
            <% @banners.each do |banner| %>
                <% cont += 1 %>
                <% if cont == 1 %>
                    <div class="carousel-item active">
                <% else %>
                    <div class="carousel-item">
                <% end %>
                    <img src="<%= url_for(banner.image) if banner.image.attached? %>" class="d-block w-85" alt="...">
                </div>
            <% end %>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>
</header>

